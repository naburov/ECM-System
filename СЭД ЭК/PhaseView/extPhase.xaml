            Height="71"  Width="450"
            FontFamily="HelveticaNeueCyr"
            FontSize="25"
            FontWeight="Bold"
            Foreground="#0b9aec" Margin="10,10,0,0" Grid.RowSpan="2"/>
        <local:dateBeg_End x:Name="mcntrlDates" FontSize="15" Margin="10,0,265,11.6" Grid.Row="1" Height="34" VerticalAlignment="Bottom"/>
