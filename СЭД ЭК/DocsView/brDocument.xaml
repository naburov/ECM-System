        <Label x:Name="lblShowMore" Cursor="Hand" PreviewMouseDown="LblShowMore_MouseDown" GotFocus="lblShowMore_GotFocus" Content="Подробнее" Margin="10,95,0,10"
            FontFamily="HelveticaNeueCyr"
            FontSize="15"
            FontWeight="Light"            
            Foreground="#0b9aec" Grid.Column="1" HorizontalAlignment="Left" Width="166"/>


